     <div class="row">
        <div class="col s6 offset-s3">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <li>
                <h2><%= article.title %></h2>
                <% if article.image != "" %>
                  <a href="<%= article.image %>" class="popupimg">
                    <img src="<%= article.image %>" alt="写真" width="500" height="300">
                  </a>
                <% end %>
                <p><%= article.content %></p>
                <p><%= article.created_at %></p>
              </li>
              <span>投稿者</span><%= article.user.nickname %>
              <% if user_signed_in? && article.user_id == current_user.id %>
                  <div class="card-action">
                   <ul>
                      <li>
                        <%= link_to "編集", "/#{article.id}/edit", class: "waves-effect waves-light btn", method: "get" %>
                        <%= link_to "削除", "/#{article.id}", class: "waves-effect waves-light btn", method: "delete" %>
                      </li>
                   </ul>
                  </div>
               <% end %>
            </div>
          </div>
        </div>
     </div>


